<div class="app">
  <div class="background-container"></div>
  <main id="main" class="shell" role="main">
    <div class="content-container">
      <slot />
    </div>
  </main>
</div>

<style>
  .app {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .background-container {
    position: fixed;
    inset: 0;
    background-image: url("/landscape_ai_image.webp");
    background-repeat: no-repeat;
    background-size: cover;
    filter: blur(8px);
  }

  .content-container {
    line-height: 1.6;
    padding-left: 5%;
    padding-right: 5%;
    background-color: var(--primary);
    overflow-y: auto;
    overflow-x: hidden;
    scrollbar-width: none;
    border-radius: 10px;
  }

  .shell {
    margin-top: calc(var(--header-height) + 10px);
    margin-inline: auto;
    width: 100%;
    height: calc(100vh - var(--header-height) - 20px);
    max-width: 1700px;
    min-inline-size: 72ch;
    position: relative;
    z-index: 1;
    display: flex;
    overflow-y: hidden;
    overflow-x: hidden;
    box-sizing: border-box;
    padding: 5px;
    background-color: var(--accent);
    border-radius: 10px;
  }
</style>
