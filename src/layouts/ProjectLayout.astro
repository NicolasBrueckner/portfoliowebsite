---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { Carousel } from "webcoreui/astro";

const { title, tagline, folderName } = Astro.props;

const imageImports = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{png,jpg}",
);
const images = await Promise.all(
  Object.entries(imageImports)
    .filter(([path]) => path.includes(folderName))
    .map(async ([, importImage]) => {
      const mod = await importImage();
      return mod.default;
    }),
);
---

<div class="hero-container">
  <h1>{title}</h1>
  <h2>{tagline}</h2>
</div>
<div class="carousel-container">
  {images.map((img) => <Image class="slide" src={img} alt="Image" />)}
</div>
<div class="description-container">
  <slot />
</div>

<style>
  div {
    border-radius: 5px;
    padding: 1%;
  }

  .hero-container {
    background-color: grey;
    display: flex;
    flex-direction: column;
    justify-content: end;
    padding: 1em 3em;
    width: 100%;
    height: 20em;
    margin: 10px;
    background: linear-gradient(var(--secondary), var(--accent));
  }

  .carousel-container {
    display: flex;
    gap: 8px;
    width: 100%;
    height: 50em;
    margin: 10px;
    align-items: center;
    overflow-x: auto; /* only horizontal scroll */
    overflow-y: hidden; /* prevent vertical overflow */
    padding: 8px;
    background-color: var(--secondary);
  }

  .slide {
    flex: 0 0 auto; /* don't grow or shrink */
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    object-fit: contain; /* image scales without distortion */
    max-width: 100%;
    max-height: 100%;
  }
  .description-container {
    background-color: var(--primary);
    display: flex;
    width: 100%;
    margin: 10px;
  }
</style>
