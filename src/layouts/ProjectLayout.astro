---
import Carousel from "../components/Carousel.astro";

const { title, tagline, folderName } = Astro.props;
---

<div class="hero-container">
  <h1>{title}</h1>
  <h2>{tagline}</h2>
</div>
<div class="carousel-container">
  <Carousel folderName={folderName} />
</div>
<div class="description-container">
  <slot />
</div>

<style>
  div {
    border-radius: 5px;
    padding: 1%;
  }

  .hero-container {
    background-color: grey;
    display: flex;
    flex-direction: column;
    justify-content: end;
    padding: 1em 3em;
    width: 100%;
    height: 20em;
    margin: 10px;
    background: linear-gradient(var(--secondary), var(--accent));
  }

  .carousel-container {
    display: flex;
    gap: 8px;
    width: 100%;
    height: 50em;
    margin: 10px;
    align-items: center;
    justify-content: center;
    overflow-x: auto; /* only horizontal scroll */
    overflow-y: hidden; /* prevent vertical overflow */
    padding: 8px;
    background-color: var(--secondary);
  }

  .slide {
    flex: 0 0 auto; /* don't grow or shrink */
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    object-fit: contain; /* image scales without distortion */
    max-width: 100%;
    max-height: 100%;
  }
  .description-container {
    background-color: var(--primary);
    display: flex;
    width: 100%;
    margin: 10px;
  }
</style>
