---
import ContentLayout from "./ContentLayout.astro";
import Carousel from "../components/Carousel.tsx";

import fs from "fs";
import path from "path";

const { title, tagline, folderName } = Astro.props;

const imagesDir = path.join(process.cwd(), "public", folderName);
const images = fs
  .readdirSync(imagesDir)
  .map((file) => `/${folderName}/${file}`);
---

<ContentLayout>
  <div class="hero-container">
    <h1>{title}</h1>
    <h2>{tagline}</h2>
  </div>
  <div class="carousel-container">
    <Carousel images={images} visibleCount={3} client:load />
  </div>
  <div class="description-container">
    <slot />
  </div>
</ContentLayout>

<style>
  div {
    border-radius: 5px;
    padding: 1%;
  }

  .hero-container {
    background-color: grey;
    display: flex;
    flex-direction: column;
    justify-content: end;
    padding: 1em 3em;
    width: 100%;
    height: 20em;
    margin: 10px;
    background: linear-gradient(var(--secondary), var(--accent));
  }

  .carousel-container {
    display: flex;
    gap: 8px;
    width: 100%;
    margin: 10px;
    align-items: center;
    justify-content: center;
    overflow-x: auto;
    overflow-y: hidden;
    padding: 2% 10%;
    background-color: var(--accent);
  }

  .slide {
    flex: 0 0 auto;
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    object-fit: contain;
    max-width: 100%;
    max-height: 100%;
  }
  .description-container {
    background-color: var(--primary);
    display: flex;
    width: 100%;
    margin: 10px;
  }
</style>
