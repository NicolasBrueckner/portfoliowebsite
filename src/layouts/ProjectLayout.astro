---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { title, tagline, folderName } = Astro.props;

const imageImports = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{png,jpg}",
);
const images = await Promise.all(
  Object.entries(imageImports)
    .filter(([path]) => path.includes(folderName))
    .map(async ([, importImage]) => {
      const mod = await importImage();
      return mod.default;
    }),
);
---

<div class="hero-container">
  <h1>{title}</h1>
  <h2>{tagline}</h2>
</div>
<div class="carousel-container">
  {
    images.map((img) => (
      <li class="slide">
        <Image class="slide-image" src={img} alt="Image" />
      </li>
    ))
  }
</div>
<div class="description-container">
  <slot />
</div>

<style>
  .hero-container {
    background-color: grey;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100px;
    margin: 10px;
  }

  .carousel-container {
    background-color: grey;
    display: flex;
    gap: 8px;
    width: 100%;
    height: 1000px;
    margin: 10px;
    overflow-x: auto;
    align-items: center;
    padding: 8px;
  }

  .description-container {
    background-color: grey;
    display: flex;
    width: 100%;
    margin: 10px;
  }

  .slide {
    width: 100%;
    height: 500px;
  }

  .slide-image {
    width: 100%;
    height: 90%;
    object-fit: fill;
    display: block;
  }
</style>
