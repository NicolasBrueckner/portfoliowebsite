---
const { title, tagline, href, folderName } = Astro.props;

const cover = `/project_images/${folderName}/cover.png`;
---

<a href={href} class="item-root">
  <img src={cover} alt={title} class="cover" />
  <h1>{title}</h1>
  <h2>{tagline}</h2>
</a>

<style>
  .item-root {
    display: flex;
    flex-direction: column;
    border: 2px solid var(--accent);
    border-radius: 8px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .item-root:hover {
    transform: translateY(-4px);
  }

  .cover {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  h1 {
    font-size: 1.2rem;
    margin: 0.5em 1em 0 1em;
  }

  h2 {
    font-size: 1rem;
    font-weight: normal;
    margin: 0 1em 1em 1em;
    color: var(--text-muted);
  }
</style>
