---
const { date, company, location, role } = Astro.props;
---

<div class="container grid">
  <div class="column">
    <p>{date}</p>
  </div>
  <div class="column">
    <strong>{company}</strong>, {location}<br />
    {role}<br />
    <br />
    <slot />
  </div>
</div>

<style>
  .container.grid {
    width: 100%;
    display: grid;
    align-items: center;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin: 15px 0;
    padding: 20px;
    border-color: var(--accent);
    border-style: solid;
    border-width: 1px;
    border-radius: 10px;
  }
  .container .column {
    color: var(--text);
    font-size: 1.2rem;
    text-align: center;
    padding: 0 5%;
  }
</style>
